<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_my_course_height"
    android:background="@color/windowBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/table_title_color"
                android:text="@string/sigle_cours"
                android:id="@+id/sigle_cours"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/padding_table_row"
                android:paddingTop="@dimen/padding_table_row"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_subtitle_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/table_subtitle_color"
                android:text="@string/group"
                android:paddingLeft="@dimen/padding_table_row"
                android:id="@+id/group"
                android:textSize="@dimen/text_item_size"
                android:layout_weight="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/table_subtitle_color"
                android:text="@string/teacher"
                android:paddingLeft="@dimen/padding_table_row"
                android:id="@+id/teacher"
                android:textSize="@dimen/text_item_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/body_text_2"
                android:text="@string/class_started_at"
                android:paddingLeft="@dimen/padding_table_row"
                android:id="@+id/start_class"
                android:textSize="@dimen/text_item_size"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/body_text_2"
                android:text="@string/class_ended_at"
                android:paddingLeft="@dimen/padding_table_row"
                android:id="@+id/end_class"
                android:textSize="@dimen/text_item_size"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>